<Window x:Class="UserInterfaceDesign.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UserInterfaceDesign"
        mc:Ignorable="d"
        Title="MainWindow" Height="900" Width="1600">
    <Grid>
        <Button x:Name="btnThongTinDaiLy" Width="250" Height="100" Margin="15,50,1335,735" FontSize="24">Thông tin đại lí</Button>
        <Button x:Name="btnTimKiemDaiLy" Width="250" Height="100" Margin="15,675,1335,110" FontSize="24">Tìm kiếm đại lí</Button>
        <Button x:Name="btnPhieuXuatHang" Width="250" Height="100" Margin="15,550,1335,235" FontSize="24">Phiếu xuất hàng</Button>
        <Button x:Name="btnPhieuThuTien" Width="250" Height="100" Margin="15,425,1335,360" FontSize="24">Phiếu thu tiền</Button>
        <Button x:Name="btnBaoCaoCongNo" Width="250" Height="100" Margin="15,300,1335,485" FontSize="24">Báo cáo công nợ</Button>
        <Button x:Name="btnBaoCaoDoanhSo" Width="250" Height="100" Margin="15,175,1335,610" FontSize="24">Báo cáo doanh số</Button>
        <WrapPanel Margin="315,25,85,80" Width="1200" Height="775" Background="{DynamicResource {x:Static SystemColors.GradientActiveCaptionBrushKey}}"/>
    </Grid>
</Window>
